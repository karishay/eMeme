{
    "manifest_version" : 2,
    "name" : "eMeme: making email responses more meme-ingful.",
    "description" : "eMeme generates the perfect meme response for email communication using natural language processing.",
    "version" : "1.0.0",
    "background" : {
        "scripts" : ["jquery.js", "backgroundScript.js"],
        "persistent" : false
    },
    "page_action" :
    {
        "default_icon" : "icons/eMeme128.png",
        "default_title" : "Meme email Response Extension"
    },
    "permissions" : [
        "tabs",
        "*://*/",
        "contextMenus",
        "webNavigation"
    ],
    "icons" : {
        "48" : "icons/eMeme48.png",
        "128" : "icons/eMeme128.png"
    },
    "content_scripts" : [
        {
            "matches": ["*://mail.google.com/*"],
            "js" : ["jquery.js","contentScript.js"]
        }
    ],
    "web_accessible_resources": [
        "jquery.js"
    ],
    "externally_connectable": {
        "ids": ["*"],
        "matches": ["*://mail.gmail.com/*"]
    }
}